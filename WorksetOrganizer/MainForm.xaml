<Window x:Class="WorksetOrchestrator.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workset Organizer v1.0.0 - DEAXO GmbH" Height="950" Width="900" MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen" Background="#FFF8F9FA"
        AllowsTransparency="False" WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- macOS-inspired color palette -->
        <SolidColorBrush x:Key="SystemBlue" Color="#FF007AFF"/>
        <SolidColorBrush x:Key="SystemGray" Color="#FF8E8E93"/>
        <SolidColorBrush x:Key="SystemGray2" Color="#FFAEAEB2"/>
        <SolidColorBrush x:Key="SystemGray3" Color="#FFC7C7CC"/>
        <SolidColorBrush x:Key="SystemGray4" Color="#FFD1D1D6"/>
        <SolidColorBrush x:Key="SystemGray5" Color="#FFE5E5EA"/>
        <SolidColorBrush x:Key="SystemGray6" Color="#FFF2F2F7"/>
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#FFF2F2F7"/>
        <SolidColorBrush x:Key="LabelPrimary" Color="#FF000000"/>
        <SolidColorBrush x:Key="LabelSecondary" Color="#FF3C3C43"/>
        <SolidColorBrush x:Key="LabelTertiary" Color="#FF8E8E93"/>
        <SolidColorBrush x:Key="SystemOrange" Color="#FFFF9500"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#FF34C759"/>

        <!-- macOS-style card -->
        <Style x:Key="MacCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SystemBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- macOS-style segmented control -->
        <Style x:Key="SegmentedButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Foreground" Value="{StaticResource LabelSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SystemGray6}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SegmentedButtonActive" TargetType="Button" BasedOn="{StaticResource SegmentedButton}">
            <Setter Property="Background" Value="{StaticResource SystemBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0051D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SystemBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="10" 
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0051D6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF003D9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SystemGray6}"/>
            <Setter Property="Foreground" Value="{StaticResource LabelPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SystemGray5}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Simple TextBox Style for debugging -->
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD1D1D6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- macOS-style labels with Apple-like fonts -->
        <Style x:Key="TitleLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Foreground" Value="{StaticResource LabelPrimary}"/>
        </Style>

        <Style x:Key="SubtitleLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Foreground" Value="{StaticResource LabelSecondary}"/>
        </Style>

        <Style x:Key="BodyLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Foreground" Value="{StaticResource LabelSecondary}"/>
        </Style>

        <Style x:Key="CaptionLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, -apple-system, BlinkMacSystemFont, sans-serif"/>
            <Setter Property="Foreground" Value="{StaticResource LabelTertiary}"/>
        </Style>

        <!-- Progress bar -->
        <Style x:Key="MacProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="{StaticResource SystemGray5}"/>
            <Setter Property="Foreground" Value="{StaticResource SystemBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" RadiusX="3" RadiusY="3"/>
                            <Rectangle Name="PART_Indicator" 
                                 Fill="{TemplateBinding Foreground}" 
                                 RadiusX="3" RadiusY="3"
                                 HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Company Branding and Version -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Workset Organizer" Style="{StaticResource TitleLabel}"/>
                    <TextBlock Text="Manage worksets, extract packages, and organize BIM data" 
                          Style="{StaticResource BodyLabel}" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <TextBlock Text="DEAXO GmbH" Style="{StaticResource CaptionLabel}" 
                          HorizontalAlignment="Right" FontWeight="Medium"/>
                    <TextBlock Text="Version 1.0.0" Style="{StaticResource CaptionLabel}" 
                          HorizontalAlignment="Right" Margin="0,2,0,0"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <!-- Mode Selection -->
        <Border Style="{StaticResource MacCard}" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Operation Mode" Style="{StaticResource SubtitleLabel}" Margin="0,0,0,12"/>

                <!-- Segmented Control -->
                <Grid Background="{StaticResource SystemGray6}" 
                  Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Name="btnQcMode" Grid.Column="0" Content="QC Check &amp; Extraction" 
                       Style="{StaticResource SegmentedButtonActive}" Click="BtnQcCheck_Click"
                       Margin="4,4,2,4"/>
                    <Button Name="btnExtractMode" Grid.Column="1" Content="Extract Worksets" 
                       Style="{StaticResource SegmentedButton}" Click="BtnExtractWorksets_Click"
                       Margin="2,4,4,4"/>
                </Grid>

                <!-- Mode Description -->
                <TextBlock Name="txtModeDescription" Text="Organizes and validates worksets based on Excel mapping"
                      Style="{StaticResource BodyLabel}" Margin="0,16,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Configuration -->
        <Border Style="{StaticResource MacCard}" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Configuration Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Configuration" Style="{StaticResource SubtitleLabel}"/>

                    <!-- Excel File Input (QC Mode Only) -->
                    <StackPanel Name="panelExcelFile" Margin="0,16,0,0">
                        <TextBlock Text="Excel Mapping File" Style="{StaticResource BodyLabel}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="txtExcelPath" Grid.Column="0" Style="{StaticResource PlaceholderTextBox}" 
                                Margin="0,0,12,0" Text="Select mapping Excel file..." TextChanged="TxtExcelPath_TextChanged"/>
                            <Button Name="btnBrowseExcel" Grid.Column="1" Content="Browse" 
                               Style="{StaticResource SecondaryButton}" Click="BtnBrowseExcel_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Workset Selection Panel (Extract Mode Only) -->
                    <StackPanel Name="panelWorksetSelection" Visibility="Collapsed" Margin="0,16,0,0">
                        <TextBlock Text="Select Worksets to Extract" Style="{StaticResource BodyLabel}" Margin="0,0,0,8"/>
                        <Border Background="White" BorderBrush="#FFD1D1D6" BorderThickness="1" CornerRadius="8" 
                            MaxHeight="200" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Name="worksetCheckboxContainer">
                                    <!-- Checkboxes will be dynamically generated here -->
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Name="btnSelectAllWorksets" Content="Select All" 
                                Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                Click="BtnSelectAllWorksets_Click"/>
                            <Button Name="btnDeselectAllWorksets" Content="Deselect All" 
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnDeselectAllWorksets_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Destination Folder -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Export Destination" Style="{StaticResource BodyLabel}" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Margin="0,0,12,0" Height="40" 
                                   Background="White" BorderBrush="#FFD1D1D6" BorderThickness="1" CornerRadius="8">
                                    <Label Name="lblDestination" Content="Select destination folder..." 
                                      Foreground="#FF666666" FontStyle="Italic" FontSize="14" 
                                      VerticalAlignment="Center" Padding="12,0" FontFamily="Segoe UI"/>
                                </Border>
                                <Button Name="btnBrowseDestination" Grid.Column="1" Content="Browse" 
                                   Style="{StaticResource SecondaryButton}" Click="BtnBrowseDestination_Click"/>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <!-- Options -->
                    <StackPanel Name="panelOptions" Orientation="Horizontal" Margin="0,20,0,0">
                        <CheckBox Name="chkOverwrite" Content="Overwrite existing files" 
                             VerticalAlignment="Center" Margin="0,0,24,0" FontSize="14"/>
                        <CheckBox Name="chkExportQc" Content="Export QC elements" 
                             VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- Log Area -->
                <Border Grid.Row="1" Background="{StaticResource SystemSecondaryBackground}" 
                   CornerRadius="8" Padding="16" Margin="0,0,0,20">
                    <TextBox Name="txtLog" IsReadOnly="True" Background="Transparent" BorderThickness="0"
                        FontFamily="Consolas, monospace" FontSize="12" 
                        Foreground="{StaticResource LabelSecondary}" TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </Border>

                <!-- Progress Section -->
                <StackPanel Grid.Row="2">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Name="txtStatus" Text="Ready" Style="{StaticResource BodyLabel}"/>
                        <TextBlock Name="txtProgress" Text="0%" Style="{StaticResource CaptionLabel}" Grid.Column="1"/>
                    </Grid>
                    <ProgressBar Name="pbProgress" Style="{StaticResource MacProgressBar}" Value="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Name="btnIntegrateTemplate" Content="Integrate Template" 
               Style="{StaticResource SecondaryButton}" Margin="0,0,12,0"
               Click="BtnIntegrateTemplate_Click" Visibility="Collapsed"/>
            <Button Name="btnExecute" Content="Start Processing" 
               Style="{StaticResource PrimaryButton}" Margin="0,0,12,0"
               Click="BtnExecute_Click"/>
            <Button Name="btnCancel" Content="Cancel" 
               Style="{StaticResource SecondaryButton}" Click="BtnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window> 